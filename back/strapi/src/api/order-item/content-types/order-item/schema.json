{
    "kind": "collectionType",
    "collectionName": "order_items",
    "info": {
        "singularName": "order-item",
        "pluralName": "order-items",
        "displayName": "Order Item"
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "order": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::order.order",
            "inversedBy": "order_items",
            "required": true
        },
        "product_template": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::product-template.product-template",
            "required": true
        },
        "selected_options": {
            "type": "json",
            "required": true,
            "description": "Opcije koje je korisnik izabrao (snapshot)"
        },
        "quantity": {
            "type": "integer",
            "required": true,
            "min": 1
        },
        "unit_price": {
            "type": "decimal",
            "required": true,
            "description": "Cena jednog komada u trenutku porudzbine"
        },
        "total_price": {
            "type": "decimal",
            "required": true,
            "description": "unit_price * quantity"
        },
        "document_url": {
            "type": "string",
            "required": true
        },
        "document_name": {
            "type": "string",
            "required": true
        },
        "document_pages": {
            "type": "integer",
            "required": false
        },
        "document_mime": {
            "type": "string",
            "required": false
        },
        "status_code": {
            "type": "enumeration",
            "enum": [
                "pending",
                "printing",
                "ready",
                "cancelled"
            ],
            "default": "pending"
        }
    }
}