{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "provider": {
      "type": "enumeration",
      "required": true,
      "default": "PayPal",
      "enum": [
        "PayPal",
        "Stripe"
      ]
    },
    "provider_payment_id": {
      "type": "string",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "fee": {
      "type": "decimal",
      "required": true
    },
    "status_code": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed"
      ]
    },
    "order_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    }
  }
}
